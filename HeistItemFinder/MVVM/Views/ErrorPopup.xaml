<Window x:Class="HeistItemFinder.MVVM.Views.ErrorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HeistItemFinder.MVVM.Views"
        xmlns:viewmodels="clr-namespace:HeistItemFinder.MVVM.ViewModels" 
        mc:Ignorable="d"
        Title="ErrorPopup" Height="100" Width="300"
        WindowStyle="None"
        Topmost="True"
        d:DataContext="{d:DesignInstance Type=viewmodels:SearchViewModel, IsDesignTimeCreatable=True}">
    <Grid>
        <TextBlock Text="{Binding ErrorMessage}" TextWrapping="Wrap" FontSize="20"/>
    </Grid>
    
</Window>
